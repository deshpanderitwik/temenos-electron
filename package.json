{
  "name": "temenos",
  "version": "0.1.0",
  "private": true,
  "main": "dist/electron/main.js",
  "description": "A secure, encrypted environment for deep psychological work and narrative exploration",
  "author": "Temenos",
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "build:main": "tsc -p electron/tsconfig.json",
    "build:preload": "tsc -p electron/tsconfig.json",
    "build:renderer": "next build",
    "build:electron": "npm run build:main && npm run build:preload && npm run build:renderer",
    "electron:dev": "npm run build:main && electron dist/electron/main.js",
    "electron:start": "electron dist/electron/main.js",
    "pack": "npm run build:electron && electron-builder --dir",
    "dist": "npm run build:electron && electron-builder",
    "dev:full": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && NODE_ENV=development npm run electron:dev\""
  },
  "dependencies": {
    "@tailwindcss/typography": "^0.5.16",
    "@tiptap/extension-character-count": "^2.14.0",
    "@tiptap/extension-placeholder": "^2.14.0",
    "@tiptap/extension-typography": "^2.14.0",
    "@tiptap/pm": "^2.14.0",
    "@tiptap/react": "^2.14.0",
    "@tiptap/starter-kit": "^2.14.0",
    "dotenv": "^17.2.1",
    "katex": "^0.16.22",
    "lenis": "^1.3.8",
    "next": "^15.4.5",
    "react-markdown": "^10.1.0",
    "react-textarea-autosize": "^8.5.9",
    "rehype-highlight": "^7.0.2",
    "rehype-katex": "^7.0.1",
    "remark-breaks": "^4.0.0",
    "remark-gfm": "^4.0.1",
    "remark-math": "^6.0.0",
    "tone": "^15.1.22"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4",
    "@types/electron": "^1.6.12",
    "@types/node": "^20",
    "@types/react": "^19.1.9",
    "@types/react-dom": "^19.1.7",
    "concurrently": "^9.2.0",
    "electron": "^37.3.1",
    "electron-builder": "^26.0.12",
    "electron-rebuild": "^3.2.9",
    "eslint": "^9",
    "eslint-config-next": "15.3.3",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wait-on": "^8.0.4"
  },
  "postinstall": "electron-rebuild"
}
